CREATE OR ALTER VIEW vwCourse AS

    SELECT  
        [Course].[Id],
        [Course].[Tag],
        [Course].[Title],
        [Course].[Url],
        [Course].[Summary],
        [Course].[CreateDate],
        [Category].[Title] AS [Category],
        [Author].[Name] AS [Author]
    FROM    
        [Course]
        INNER JOIN [Category] ON [Course].[CategoryId] = [Category]. [Id]
        INNER JOIN [Author] ON [Course].[AuthorId] = [Author].[Id]
    WHERE
        [Active] = 1
